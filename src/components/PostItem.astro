---
import FormattedDate from '@/components/FormattedDate.astro';

const { post } = Astro.props;
---
    <a href={`/blog/${post.id}`}>
      <div class="flex relative h-fit">
        <div
          class="side-border w-4 self-stretch shrink-0"
          style={{
            background:
              'repeating-linear-gradient(135deg, var(--color-amber-500) 0px, var(--color-amber-500) 8px, #ffffff 8px, #ffffff 16px)',
          }}
        ></div>
        <div
          class:list={[
            'item-card',
            'flex-1',
            'flex',
            'flex-col',
            'gap-2',
            'py-2',
            'pl-2',
            'group',
            'hover:pl-4',
            'transition-padding',
            'duration-300',
            'border-2',
            'border-l-0',
            'border-gray-200'
          ]}
        >
          <div class="item-name text-lg font-bold">{post.data.title}</div>
          <div class="item-created-at text-sm text-gray-500">
            <FormattedDate date={post.data.createdAt} />
          </div>
          <div class="item-tags flex items-center gap-2">
            {post.data.tags?.map((tag: string, index: number) => (
              <Fragment key={tag}>
                <div class="item-tag text-sm text-gray-500">{tag}</div>
                {index !== post.data.tags.length - 1 && <div class="text-gray-500">/</div>}
              </Fragment>
            ))}
          </div>
          <div
            class:list={[
              'item-border-bottom',
              'absolute',
              'bottom-0',
              'left-4',
              'w-0',
              'h-[2px]',
              'bg-amber-500',
              'transition-all',
              'duration-300',
              'group-hover:w-[calc(100%-1rem)]'
            ]}
          ></div>
        </div>
      </div>
    </a>
  

